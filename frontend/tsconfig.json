{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/context/*": ["context/*"],
      "@/lib/*": ["lib/*"],
      "@/assets/*": ["assets/*"],
      "@/services/*": ["services/*"],
      "@/utils/*": ["utils/*"],
      "@testing-library/jest-dom": [
        "../node_modules/@testing-library/jest-dom/extend-expect"
      ]
    },
    "incremental": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "react", "react-dom", "jest", "@testing-library/jest-dom", "postcss-load-config"]
  },
  "include": ["src/**/*", "postcss.config.ts", "src/types/**/*"],
  "exclude": ["node_modules", "build", "dist", "public"]
}

